; multiple threads perform i/o (uniform distribution among all CPUs)
; even numbered CPUs are burned by other threads
;
; - start -
[global]
rw=${MODE}
size=${SIZE}
bsrange=1k-128k
filename=${DEV}
end_fsync=1
# time_based
# runtime=30s

[job1]
startdelay=1
ioengine=libaio
numjobs=6

[job2]
ioengine=cpuio
exit_on_io_done=1
cpuload=90
# cpus 0,2,4,6,8,10
cpumask=1365
cpus_allowed_policy=split
numjobs=6

; - end -
