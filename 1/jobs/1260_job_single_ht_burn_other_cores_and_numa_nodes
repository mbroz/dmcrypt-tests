; first 2 threads perform i/o on cpu 0 (HT enabled)
; other threads burn all other CPUs
;
; NOTE: this test is system topology dependent
;
; - start -
[global]
cpus_allowed_policy=split

[job1]
startdelay=1s
ioengine=libaio
cpus_allowed=0,80
numjobs=2
rw=${MODE}
bsrange=1k-128k
filename=${DEV}
size=${SIZE}
end_fsync=1

[job2]
ioengine=cpuio
exit_on_io_done=1
cpuload=${CPU_LOAD}
# see attached system topology
cpus_allowed=1-79
numjobs=79

; - end -
