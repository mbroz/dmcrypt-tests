; first thread performs i/o on cpu 0
; other threads burn all other CPUs (HT enabled)
;
; NOTE: this test is system topology dependent
;
; - start -
# [global]

[job1]
startdelay=1s
ioengine=libaio
cpus_allowed=0
rw=${MODE}
bsrange=1k-128k
filename=${DEV}
size=${SIZE}
end_fsync=1

[job2]
ioengine=cpuio
exit_on_io_done=1
cpuload=${CPU_LOAD_HT}
# see attached system topology
cpus_allowed=1-79,81-159
cpus_allowed_policy=split
numjobs=158

; - end -
