; first thread performs i/o on cpu 0
; other threads burn all other CPUs on same NUMA node
;
; NOTE: this test is system topology dependent
;
; - start -
# [global]

[job1]
startdelay=1s
ioengine=libaio
cpus_allowed=0
rw=${MODE}
bsrange=1k-128k
filename=${DEV}
size=${SIZE}
end_fsync=1

[job2]
ioengine=cpuio
exit_on_io_done=1
# what value is reasonable
cpuload=${CPU_LOAD}
# see attached system topology
cpus_allowed=1-9
cpus_allowed_policy=split
numjobs=9

; - end -
