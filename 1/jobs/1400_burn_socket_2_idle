; - start -
[global]
cpus_allowed_policy=split
ioengine=cpuio
group_reporting

; which load will cause migration on related i/o job?
[burn0]
cpus_allowed=0-9,80-89
cpuload=${CPULOAD_EXP}
numjobs=20

; load all CPUs except CPU in socket #2 (neigboring numa group)
; leave logacial cores 20-29,100-109 idle
[burn1]
cpus_allowed=10-19,30-79,90-99,110-159
cpuload=90
numjobs=120

