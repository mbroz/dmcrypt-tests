; every odd numbered CPU perform i/o
; every even numbered CPU is on fire
;
; - start -
[global]
rw=${MODE}
size=${SIZE}
bsrange=1k-128k
filename=${DEV}
end_fsync=1
cpus_allowed_policy=split
# time_based
# runtime=30s

[job1]
startdelay=1
# i/o threads
ioengine=libaio
# cpus 1,3,5,7,9,11
cpumask=2730
numjobs=6

[job2]
# cpu burn threads
ioengine=cpuio
exit_on_io_done=1
cpuload=90
# cpus 0,2,4,6,8,10
cpumask=1365
numjobs=6

; - end -
