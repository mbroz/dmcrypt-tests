; multiple threads perform i/o (uniform distribution among all CPUs)
; first half of CPUs are burned by other threads
;
; - start -
[global]
rw=${MODE}
size=${SIZE}
bsrange=1k-128k
filename=${DEV}
end_fsync=1
# time_based
# runtime=30s

[job1]
startdelay=1
ioengine=libaio
numjobs=6

[job2]
ioengine=cpuio
exit_on_io_done=1
cpuload=90
# cpus 0,1,2,3,4,5
cpumask=63
cpus_allowed_policy=split
numjobs=6

; - end -
